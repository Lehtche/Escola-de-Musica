package com.mycompany.escolamusical1;
import java.io.PrintStream;
import java.nio.charset.StandardCharsets;
/**
 *
 * @author leticia
 */
public class EscolaMusica {
    
    public static void main(String[]args){
        System.setOut(new PrintStream(System.out,true,StandardCharsets.UTF_8));
        System.out.println("Iniciar a Orquestra");
        
        InstrumentoMusical[] banda = new InstrumentoMusical[4];
        
        banda[0] = new ViolaoExercicio("Violao classico","Madeira",6);
        banda[1] = new PianoExercicio("Piano classico","Madeira",6);
        banda[2] = new SaxofoneExercicio("Saxofone ","Madeira","Alto");
        banda[3] = new BateriaExercicio("Bateria acustica","Madeira",5);
        
        
        EscolaMusica escola = new EscolaMusica();
        
        escola.apresentar(banda);
        escola.contarInstrumentosPorTipo(banda);
    }
    
    public void apresentar(InstrumentoMusical [] banda){
        System.out.println("Orquestra vai começar!");
        
        System.out.println("afinação dos instrumentos");
        
       //afinação
        for (InstrumentoMusical instrumento : banda) {
            System.out.println("Afinando " + instrumento.getNome() + "...");
        }

        System.out.println("\n--- Todos os instrumentos afinados! ---\n");
    
    }
    
    
    public void contarInstrumentosPorTipo(InstrumentoMusical[] banda) {
        int pianos = 0, baterias = 0, saxofones = 0, violoes = 0, outros = 0;

        for (InstrumentoMusical instrumento : banda) {
            if (instrumento instanceof PianoExercicio) {
                pianos++;
            } else if (instrumento instanceof BateriaExercicio) {
                baterias++;
            } else if (instrumento instanceof SaxofoneExercicio) {
                saxofones++;
            } else if (instrumento instanceof ViolaoExercicio) {
                violoes++;
            } else {
                outros++;
            }
        }

        System.out.println("Quantidade de instrumentos por tipo:");
        System.out.println("Pianos: " + pianos);
        System.out.println("Baterias: " + baterias);
        System.out.println("Saxofones: " + saxofones);
        System.out.println("Violões: " + violoes);

        if (outros > 0) {
            System.out.println("Outros: " + outros);
        }
    }
}
